<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_60sdp"
    android:layout_height="wrap_content"
    >


        <RelativeLayout
            android:id="@+id/relativeLayout_over_youtube_thumbnail"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:visibility="visible">
            <ImageView
                android:id="@+id/level_bg_iv"
                android:layout_width="match_parent"
                android:layout_centerInParent="true"
                android:layout_height="match_parent"
                android:src="@drawable/gold_bg_level"

                />

            <TextView
                android:id="@+id/level_num_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/alfa_slab_one"
                android:gravity="center"
                android:paddingBottom="@dimen/_15sdp"
                android:text="1"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_20sdp" />

        </RelativeLayout>

    <TextView
        android:id="@+id/status_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/relativeLayout_over_youtube_thumbnail"
        android:text="Pending"
        android:maxLines="1"

        android:gravity="center"
        android:ellipsize="end"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="4dp"
        android:textColor="#017C20"
        android:textSize="12sp"/>

    <ImageView
        android:id="@+id/down_arrow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_10sdp"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/status_tv"
        android:src="@drawable/down_arrow"
        android:gravity="center_horizontal"
         />
</RelativeLayout>