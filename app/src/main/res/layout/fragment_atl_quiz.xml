<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.Atl.AtlQuizFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/quiz_img"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@mipmap/meditation"
        android:layout_margin="20dp"
        android:padding="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Are you ready for Quiz?"
        android:textAlignment="center"
        android:textColor="#111"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/quiz_img" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:gravity="center"
        android:padding="10dp"
        >

    <Button
        android:id="@+id/play_qz_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play Quiz"
        android:textSize="20dp"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>