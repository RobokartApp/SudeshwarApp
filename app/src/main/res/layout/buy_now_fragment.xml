<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <carbon.widget.TextView
            android:id="@+id/home_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Learn at your Home"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <carbon.widget.TextView
            android:id="@+id/home_cost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="₹ 11200"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@id/home_txt"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:textColor="@color/purple"/>


        <carbon.widget.TextView
            android:id="@+id/home_learn_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:text="Best for learners wants to learn from home, you will
receive Kindertronics kit via courier in 5 working days"
            app:layout_constraintTop_toBottomOf="@id/home_cost"
            android:layout_marginTop="10dp"/>


        <carbon.widget.Button
            android:id="@+id/btn_buy_home"
            style="@style/carbon_Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="@dimen/margin_left"
            android:layout_marginRight="@dimen/margin_right"
            android:text="Buy Now"
            app:layout_constraintTop_toBottomOf="@id/home_learn_desc"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/btn_login"
            android:shadowRadius="10.0"
            android:shadowDy="10.0"
            app:carbon_elevation="10dp"
            app:carbon_elevationAmbientShadowColor="@color/purple"
            app:carbon_elevationShadowColor="@color/purple"/>


        <LinearLayout
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightgrey"
            app:layout_constraintTop_toBottomOf="@id/btn_buy_home"
            android:orientation="vertical"
            android:layout_marginTop="20dp"/>



        <carbon.widget.TextView
            android:id="@+id/makerspace_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Learn at our Center"
            android:gravity="center"
           android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/divider"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <carbon.widget.TextView
            android:id="@+id/makerspace_cost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="₹ 11200"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@id/makerspace_txt"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:textColor="@color/purple"/>


        <carbon.widget.TextView
            android:id="@+id/makerspace_learn_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:layout_marginLeft="30dp"
            android:text="Course fee includes access to maker space and \ncourse material."
            app:layout_constraintTop_toBottomOf="@id/makerspace_cost"
            android:layout_marginTop="10dp"/>


        <EditText
            android:id="@+id/key_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Type key here"
            android:padding="22dp"
            android:layout_marginHorizontal="30dp"
            app:layout_constraintTop_toBottomOf="@+id/makerspace_learn_desc"
            android:drawableRight="@drawable/key"
            android:backgroundTint="@color/lightgrey"
            android:layout_marginTop="20dp"/>

        <carbon.widget.Button
            android:id="@+id/btn_buy_makerspace"
            style="@style/carbon_Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="@dimen/margin_left"
            android:layout_marginRight="@dimen/margin_right"
            android:text="Buy Now"
            app:layout_constraintTop_toBottomOf="@id/key_edt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/btn_login"
            android:shadowRadius="10.0"
            android:shadowDy="10.0"
            app:carbon_elevation="10dp"
            app:carbon_elevationAmbientShadowColor="@color/purple"
            app:carbon_elevationShadowColor="@color/purple"
            android:layout_marginBottom="20dp"/>



    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>