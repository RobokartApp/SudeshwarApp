<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/purple_bg"
    android:orientation="vertical">



    <ImageView
        android:id="@+id/back_arrow"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/back_arrow"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:visibility="gone"
        android:layout_marginBottom="20dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/profile_pic"
        android:layout_marginStart="20dp"/>

    <carbon.widget.TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Charul Dalvi"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:layout_marginTop="14dp"
        android:layout_marginStart="25dp"/>


    <Space
        android:layout_width="wrap_content"
        android:layout_height="36dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <Space
            android:layout_width="25dp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/drawer_courses"/>

        <Space
            android:layout_width="25dp"
            android:layout_height="wrap_content"/>

        <carbon.widget.TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Courses"
            android:textColor="@color/white"
            android:textStyle="normal"
            android:textSize="18sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="30dp">

        <Space
            android:layout_width="25dp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/drawer_download"/>

        <Space
            android:layout_width="25dp"
            android:layout_height="wrap_content"/>

        <carbon.widget.TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Download"
            android:textColor="@color/white"
            android:textStyle="normal"
            android:textSize="18sp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="30dp">

        <Space
            android:layout_width="25dp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/drawer_payment"/>

        <Space
            android:layout_width="25dp"
            android:layout_height="wrap_content"/>

        <carbon.widget.TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment"
            android:textColor="@color/white"
            android:textStyle="normal"
            android:textSize="20sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="30dp">

        <Space
            android:layout_width="25dp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/drawer_help"/>

        <Space
            android:layout_width="25dp"
            android:layout_height="wrap_content"/>

        <carbon.widget.TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Help"
            android:textColor="@color/white"
            android:textStyle="normal"
            android:textSize="18sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="30dp">

        <Space
            android:layout_width="25dp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/drawer_about"/>

        <Space
            android:layout_width="25dp"
            android:layout_height="wrap_content"/>

        <carbon.widget.TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About Us"
            android:textColor="@color/white"
            android:textStyle="normal"
            android:textSize="18sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="30dp">

        <Space
            android:layout_width="25dp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/drawer_rate"/>

        <Space
            android:layout_width="25dp"
            android:layout_height="wrap_content"/>

        <carbon.widget.TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rate Us"
            android:textColor="@color/white"
            android:textStyle="normal"
            android:textSize="18sp"/>

    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="40dp" />

    <carbon.widget.Button
        style="@style/carbon_Button.Flat"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:background="@drawable/logout_btn"
        android:text="Logout"
        android:textColor="@color/purple"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:layout_marginStart="25dp"/>

</LinearLayout>