<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/purple_bg"
    tools:context=".Activities.Quiz.QuizActivity">



    <LinearLayout
        android:id="@+id/llProgress"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp">
        <ImageView
            android:id="@+id/ivClose"
            android:layout_marginLeft="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/close_btn"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/layout_bg"
            android:layout_marginRight="10dp">
            <ProgressBar
                android:id="@+id/countdownProgress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:paddingLeft="3dp"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:paddingRight="3dp"
                android:max="100"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:theme="@style/progressBarBlue"
                android:progress="100"
                android:progressDrawable="@drawable/rounded_corners_progress_bar"
                android:layout_weight="1" />
            <carbon.widget.TextView
                android:id="@+id/timer_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="13:00"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"/>
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/time_ic"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp" />
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/llProgress"
        android:layout_marginTop="80dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/light"
            app:cardCornerRadius="25dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp">

                <carbon.widget.TextView
                    android:id="@+id/tvQuestionCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Question 1 /"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <carbon.widget.TextView
                    android:id="@+id/tvTotalQuestion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@id/tvQuestionCount"
                    android:text="20"
                    android:textColor="@color/black" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/tvTotalQuestion"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="2dp">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cvQuestion"
                        android:layout_width="match_parent"
                        android:layout_height="400dp"
                        android:layout_marginTop="10dp"
                       android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="6dp">


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <carbon.widget.TextView
                                android:id="@+id/question_txt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="How many basic steps are there in The Scientific Method?"
                                android:textSize="18sp"
                                android:gravity="center"
                                android:layout_marginTop="10dp"
                                android:padding="10dp"
                                app:layout_constraintTop_toTopOf="parent"/>

                            <RadioGroup
                                android:id="@+id/rbgroup"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="14dp"
                                android:layout_marginTop="20dp"
                                app:layout_constraintTop_toBottomOf="@id/question_txt"
                                >

                                <RadioButton
                                    android:id="@+id/rb_1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Answer 1"
                                    android:textSize="14sp"
                                    android:background="@drawable/tag_transparent_background"
                                    android:textAlignment="center"/>

                                <RadioButton
                                    android:id="@+id/rb_2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Answer 2"
                                    android:textSize="14sp"
                                    android:background="@drawable/tag_transparent_background"
                                    android:layout_marginTop="14dp"
                                    android:textAlignment="center"/>

                                <RadioButton
                                    android:id="@+id/rb_3"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Answer 3"
                                    android:textSize="14sp"
                                    android:background="@drawable/tag_transparent_background"
                                    android:layout_marginTop="14dp"
                                    android:textAlignment="center"/>

                                <RadioButton
                                    android:id="@+id/rb_4"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Answer 4"
                                    android:textSize="14sp"
                                    android:background="@drawable/tag_transparent_background"
                                    android:layout_marginTop="14dp"
                                    android:textAlignment="center"/>


                            </RadioGroup>


                        </androidx.constraintlayout.widget.ConstraintLayout>







                    </com.google.android.material.card.MaterialCardView>


                </RelativeLayout>
            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>


    </RelativeLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/light"
            android:layout_gravity="bottom"
            android:gravity="center_vertical">

            <carbon.widget.Button
                android:id="@+id/btnPreviousQustn"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btn_login"
                android:text="Previous Question"
                android:textColor="@color/white"
                app:carbon_elevationShadowColor="@color/purple"
                app:carbon_elevation="12dp"
                android:layout_weight="1"
                android:textStyle="bold"/>

            <carbon.widget.Button
                android:id="@+id/btnNextQustn"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btn_login"
                android:text="Next"
                android:textColor="@color/white"
                app:carbon_elevationShadowColor="@color/purple"
                app:carbon_elevation="12dp"
                android:layout_weight="1"
                android:textStyle="bold"/>

        </LinearLayout>





    <include layout="@layout/layout_bottom_sheet"
        />


</androidx.coordinatorlayout.widget.CoordinatorLayout>