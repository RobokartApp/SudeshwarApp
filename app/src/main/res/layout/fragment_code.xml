<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:padding="10dp">
<TextView
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="androidRobokart.ino"
    android:textColor="#333"
    android:gravity="center"
    android:padding="3dp"
    android:layout_above="@+id/download_btn"
    android:layout_margin="30dp"
    />
   <TextView
       android:id="@+id/download_btn"
       android:layout_width="270dp"
       android:layout_height="70dp"
       android:drawableEnd="@drawable/simple_download"
       android:text="Download"
       android:textSize="20dp"
       android:layout_marginBottom="@dimen/_20sdp"
       android:layout_centerInParent="true"
       android:padding="10dp"
       android:gravity="center"
       android:layout_alignParentBottom="true"
       android:textColor="#fff"
       android:background="@drawable/bg_commman"
       />
    <TextView
        android:id="@+id/share_btn"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:drawableEnd="@mipmap/share_128"
        android:layout_below="@+id/download_btn"
        android:layout_marginTop="20dp"
        android:text="Share"
        android:visibility="gone"
        android:textSize="20dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textColor="#fff"
        android:background="@drawable/color1"
        android:padding="10dp"
        />
</RelativeLayout>