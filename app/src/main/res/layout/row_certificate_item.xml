<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="170dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    android:layout_height="wrap_content"
    android:id="@+id/cert_relative">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvVideo"
        android:layout_width="match_parent"
        app:cardCornerRadius="4dp"
        android:padding="@dimen/_3sdp"
        android:layout_height="100dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivVideo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/cert_banner"/>


            <TextView
                android:id="@+id/certificate_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="03-10-1997"
                android:gravity="center"
                android:textSize="@dimen/_8sdp"
                android:padding="@dimen/_1sdp"
                android:textColor="#4C4A4D"
android:layout_alignParentBottom="true"
                 />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_35sdp"
                android:src="@mipmap/certificate" />

        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_below="@id/cvVideo">
        <TextView
            android:id="@+id/course_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Advanced Robotics - Lantern Academy"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="4dp"
            android:textColor="@color/black"
            android:textSize="12sp"/>

    </RelativeLayout>

</RelativeLayout>
