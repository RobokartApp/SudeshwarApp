        <activity
            android:name=".Activities.AtlChooseStandard.AtlChooseStandard"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activities.NewQuiz.NewQuizActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activities.ChooseCategory.ChooseCategory"
