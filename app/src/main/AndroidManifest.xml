        <activity
            android:name=".Activities.Quiz.DailyQuizActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activities.terms.TermsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activities.FreeCourses.SingleYouTubeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activities.FreeCourses.YouTube"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="video"
                    android:scheme="robokart" />
