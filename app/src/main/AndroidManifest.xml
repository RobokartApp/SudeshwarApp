            android:screenOrientation="portrait" />
        <activity
            android:name=".VideoRecord.PostVideoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".VideoRecord.PreviewVideoAct"
            android:screenOrientation="portrait" />
        <activity
            android:name=".VideoRecord.RecordVideoActivity"
